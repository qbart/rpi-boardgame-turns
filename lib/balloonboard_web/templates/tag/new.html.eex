<h1>New tag</h1>

<div class="row">
  <div class="col-sm">
    <%= form_for @changeset, Routes.tag_path(@conn, :create), fn f -> %>
      <label>
        Player: <%= select f, :player, 1..2 %>
      </label>

      <label>
        Emoji: <%= text_input f, :tag %>
      </label>

      <%= submit "Save", class: "btn btn-success btn-block btn-xl" %>
    <% end %>
  </div>
</div>
